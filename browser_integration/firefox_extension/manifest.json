{
    "name": "Open with Quake",
    "description": "Download an archive for opening with the Quake app.",
    "author": "Joel Baxter",
    "homepage_url": "https://neogeographica.com/",
    "version": "1.3.1",
    "manifest_version": 2,
    "browser_specific_settings": { 
      "gecko": { 
        "id": "open-with-quake@neogeographica.com",
        "update_url": "https://raw.githubusercontent.com/neogeographica/singleplayer_scripts/main/browser_integration/firefox_extension/updates.json" 
      }
    },
    "icons": {
      "16": "icons/quake-icon-16.png",
      "24": "icons/quake-icon-24.png",
      "32": "icons/quake-icon-32.png",
      "48": "icons/quake-icon-48.png",
      "128": "icons/quake-icon-128.png"
    },
    "browser_action": {
      "default_icon": {
        "16": "icons/quake-icon-16.png",
        "24": "icons/quake-icon-24.png",
        "32": "icons/quake-icon-32.png",
        "48": "icons/quake-icon-48.png"
      },
      "default_title": "will show status of Open with Quake"
    },
    "background": { 
      "scripts": ["background.js"],
      "persistent": true
    },
    "permissions": [
      "menus",
      "webRequest",
      "webRequestBlocking",
      "<all_urls>"
    ]
}
